Package: mmsig
Title: A Mutational Signature Fitting Tool for Hematological Cancers
Version: 0.0.0.9000
Authors@R: c(
    person(given = "Even", family = "Rustad", role = c("aut", "cre"), 
           email = "ehrustad@gmail.com",comment = c(ORCID = "https://orcid.org/0000-0002-9320-4963")),
    person(given = "Nicos", family = "Angelopoulos", role = "aut", email = "nicos.angelopoulos@gmail.com"),
    person(given = "Francesco", family = "Maura", role = c("aut", "cph"), email = "mauraf@mskcc.org")
